rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all users to read projects
    match /projects/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to CREATE contact submissions (public contact form)
    // Only create â€” no read, update, or delete for unauthenticated users
    match /contactSubmissions/{document} {
      allow create: if request.resource.data.name is string
                    && request.resource.data.email is string;
      allow read, update, delete: if request.auth != null;
    }

    // Allow anyone to CREATE lead/offer submissions (offer popup form)
    match /offerSubmissions/{document} {
      allow create: if request.resource.data.fullName is string
                    && request.resource.data.email is string
                    && request.resource.data.phone is string;
      allow read, update, delete: if request.auth != null;
    }

    // Allow anyone to CREATE lead submissions (lead popup form)
    match /leadSubmissions/{document} {
      allow create: if request.resource.data.email is string;
      allow read, update, delete: if request.auth != null;
    }

    // Allow anyone to CREATE cookie consent logs
    match /cookieConsents/{document} {
      allow create: if request.resource.data.analytics is bool;
      allow read, update, delete: if request.auth != null;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
